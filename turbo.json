{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build:package": {
      "cache": false,
      "outputs": ["dist/**"]
    },
    "build:app": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["build:package"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build:package"]
    },
    "lint": {
      "cache": false
    },
    "type-check": {
      "cache": false
    },
    "test": {
      "cache": false,
      "dependsOn": ["build:package"]
    },
    "test:e2e": {
      "cache": false,
      "dependsOn": ["build:package"]
    },
    "test:storybook": {
      "cache": false,
      "dependsOn": ["build:package"]
    }
  }
}
